                            </span>
                        </div>
                    </form>
                    <!-- /.search form -->
                    @{
                        List<string> color = new List<string>();
                        color.Add("red");
                        color.Add("green");
                        color.Add("blue");
                        int iter = 0;
                        foreach (var trip in @ViewBag.data["trips"])
                        {
                            iter++;
                            iter = iter % color.Count;
                            <li><a href="/MainPage/SelectTrip?tripId=@trip["id"]"><i class="fa fa-circle-o text-@color[iter]"></i> <span>@trip["disp"]</span></a></li>
                        }
                    }
                    <li class="header">FRIENDS</li>
                    <!-- search form -->
