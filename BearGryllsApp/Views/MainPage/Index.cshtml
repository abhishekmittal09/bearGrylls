@functions{
    public dynamic GetUserInfo(string id)
    {
        foreach (var user in ViewBag.data["users"])
        {
            if (string.Equals(user["userId"], id))
            {
                return user;
            }
        }
        return null;
    }
    public dynamic GetTripData(string id)
    {
        foreach (var trip in ViewBag.data["trips"])
        {
            if (string.Equals(trip["id"], id))
            {
                return trip;
            }
        }
        return null;
    }
    public string GetDispName(string id)
    {
        foreach(var trip in ViewBag.data["trips"])
        {
            if(string.Equals(trip["id"], id))
            {
                return trip["disp"];
            }
        }
        return string.Empty;
    }
}
