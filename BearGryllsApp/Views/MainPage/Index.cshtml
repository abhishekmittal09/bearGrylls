@functions{
    public dynamic GetUserInfo(string id)
    {
        foreach (var user in ViewBag.data["users"])
        {
            if (string.Equals(user["userId"], id))
            {
                return user;
            }
        }
        return null;
    }
    public dynamic GetTripData(string id)
    {
        foreach (var trip in ViewBag.data["trips"])
        {
            if (string.Equals(trip["id"], id))
            {
                return trip;
            }
        }
        return null;
    }
    public string GetDispName(string id)
    {
        foreach(var trip in ViewBag.data["trips"])
        {
            if(string.Equals(trip["id"], id))
            {
                return trip["disp"];
            }
        }
        return string.Empty;
    }
}
<script type="text/javascript">
    $(document).ready(function () {

        var map = null;

        function GetMap() {
            // Initialize the map
            map = new Microsoft.Maps.Map(document.getElementById("mapDiv"), { credentials: "sY89A4SpRaqIyWdAKGEs~3DmGloZSTh7FQ-GrspNF9w~AlrCJ4yzXUaismMsutj0bCSh3IY499POys3fUNQNI2mFw-zzuenjML812umbHRag", mapTypeId: Microsoft.Maps.MapTypeId.road });
            @{
                var trip = GetTripData(ViewBag.SelectedTripId);
                if (trip != null)
                {
                    foreach (var memberId in trip["members"])
                    {
                        var userInfo = GetUserInfo(memberId);
                        if (userInfo == null)
                        {
                            continue;
                        }
                        <text>
                        var loc = new Microsoft.Maps.Location(@userInfo["lat"], @userInfo["long"]);
                        var pin = new Microsoft.Maps.Pushpin(loc);
                        map.entities.push(pin);
                        </text>
                    }
                }
            }
            map.setView({ center: loc, zoom: 6 });
        }

        GetMap();
    });
</script>

