            map = new Microsoft.Maps.Map(document.getElementById("mapDiv"), { credentials: "sY89A4SpRaqIyWdAKGEs~3DmGloZSTh7FQ-GrspNF9w~AlrCJ4yzXUaismMsutj0bCSh3IY499POys3fUNQNI2mFw-zzuenjML812umbHRag", mapTypeId: Microsoft.Maps.MapTypeId.road });
            @{
                var trip = GetTripData(ViewBag.SelectedTripId);
                if (trip != null)
                {
