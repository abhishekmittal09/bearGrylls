                        pin.Description = "";
                        Microsoft.Maps.Events.addHandler(pin, 'click', displayInfobox);
                        dataLayer.push(pin);
                        </text>
                    }
                }
            }
            //Add Data to the map
            map.setView({ center: loc, zoom: 13 });
        }

        GetMap();
    });
